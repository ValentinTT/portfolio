---
import SpotlightCardsContainer from "../Cards/SpotlightCardsContainer.astro";
import SpotlightCard from "../Cards/SpotlightCard.astro";
import SectionHeader from "../SectionHeader.astro";
import ProjectCard from "./Project/ProjectCard.astro";
import ImageLogo from "./Project/ImageLogo.astro";
import ProjectStack from "./Project/ProjectStack.astro";
import projectsInfo from "../../data/projects-info";

const fromColor = "1fa0e0";
const viaColor = "4519b3";
---

<!-- background 50, background 50-->
<section
  class="w-full max-w-full flex flex-col items-center bg-transparent text-secondary-50 space-y-5 overflow-hidden pt-16"
  id="projects"
  data-color="#a3d6f5"
  data-color-dark="#010609"
>
  <SectionHeader class="mb-14">PROJECTS.</SectionHeader>
  <SpotlightCardsContainer
    class="w-full flex flex-wrap justify-center items-center p-2 gap-2 sm:gap-4 lg:gap-8"
  >
    {
      projectsInfo.map((project) => {
        return (
          <SpotlightCard
            from={fromColor}
            via={viaColor}
            class="bg-background dark:bg-zinc-950 text-text sm:h-[24rem] w-[30rem]"
          >
            <ProjectCard
              title={project.title}
              codeLink={project.codeLink}
              blogLink={project.blogLink}
              otherLink={project.otherLink}
            >
              <ImageLogo
                src={project.image.src}
                alt={project.image.alt}
                slot={project.image.slot}
              />

              <p class="text-zinc-700 dark:text-zinc-400">
                {project.description}
              </p>
              <div class="flex" slot="tags">
                {project.tags.map((stack) => {
                  return <ProjectStack stackName={stack} />;
                })}
              </div>
            </ProjectCard>
          </SpotlightCard>
        );
      })
    }
  </SpotlightCardsContainer>
</section>
