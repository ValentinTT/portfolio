---
import LinkButton from "../../LinkButton.astro";

export interface Props {
  title: string;
  codeLink: string;
  blogLink?: string;
}

const { title, codeLink, blogLink } = Astro.props;
---

<article class="flex flex-col w-full h-full p-10">
  <header class="flex space-x-5 items-center">
    <slot name="logo" />
    <h3 class="py-5 text-3xl tracking-tighter font-normal">{title}</h3>
  </header>
  <main class="py-4 space-y-5">
    <slot />
  </main>
  <footer class="mt-auto flex space-x-3">
    {
      blogLink !== undefined && blogLink !== "" && (
        <LinkButton link={blogLink} icon="arrow-up-right" iconClass="w-3 h-3">
          Blog
        </LinkButton>
      )
    }
    <LinkButton link={codeLink} icon="code" iconClass="w-5 h-5">
      Code
    </LinkButton>
  </footer>
</article>
